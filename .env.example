# Database (MySQL)
MYSQL_ROOT_PASSWORD=rootpassword
MYSQL_DATABASE=thermal_sim
MYSQL_USER=thermal_user
MYSQL_PASSWORD=thermal_password
DATABASE_URL=mysql+pymysql://thermal_user:thermal_password@mysql:3306/thermal_sim

# RabbitMQ
RABBITMQ_DEFAULT_USER=thermal
RABBITMQ_DEFAULT_PASS=thermal_queue
RABBITMQ_URL=amqp://thermal:thermal_queue@rabbitmq:5672/

# MinIO (S3-compatible storage)
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin123
MINIO_ENDPOINT=minio:9000
MINIO_BUCKET=thermal-sim-files
MINIO_USE_SSL=false

# JWT
JWT_SECRET=your-jwt-secret-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRY_HOURS=24

# SMTP (Custom)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-smtp-user
SMTP_PASSWORD=your-smtp-password
SMTP_FROM_NAME=your-name
SMTP_FROM_EMAIL=noreply@yourdomain.com
SMTP_USE_TLS=true

# Frontend
VITE_API_URL=http://localhost:8000
